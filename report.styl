
.box, .report
  padding           tick
  margin            tick
  background        white
  border            1px solid stroke
  border-radius     3px
  box-shadow        0px 2px 2px rgba(0, 0, 0, 0.06)


.report
  padding           (tick * 2.5)

  .header
    border-bottom   1px solid gray-lighter
    padding-bottom  tick
    margin-bottom   tick * 1.5

    h1, h2, h3
      margin        0 0 tick 0

    h1
      font-size     32pt

    .matter
      font-size     9pt
      text-align    right
      float         right

      p
        margin      0

  .row
    padding         tick (tick * 0.5) tick (tick * 0.5)

    .title
      font-size     14pt
      font-weight   bold
      margin        0 0 5px 0

    .tally
      font-size     12pt
      float         right
      font-weight   bold


    .matter
      margin        0 0 0 tick
      color         gray

      .pair
        margin      5px 0

      .key
        display     inline-block
        width       tick * 6
        color       gray

      .val
        display     inline-block

  .row:hover
    cursor          pointer

  .selected
    .row
      .title, .tally
        color       primary-red

.detail
  padding           0 tick

  ul.details
    list-style-type none
    padding         0

    li
      text-shadow   1px 1px 0 #fff

      label
        width         150px
        display       inline-block
        color         gray

  .section
    h4
      font-size       1.5em
      margin-bottom   10px

    a.edit
      float           right

    .title
      font-weight     bold
      color           gray
      margin          10px 0 0 10px

      small
        color         gray-light

  ul
    margin            10px 0 0 0
    color             gray
